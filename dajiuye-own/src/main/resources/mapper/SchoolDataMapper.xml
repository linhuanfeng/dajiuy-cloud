<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--这里的namespace和mapper里面接口方法全限定名对应好就可以自动联系-->
<mapper namespace="com.lhf.dajiuye.own.mapper.SchoolDataMapper">
    <select id="getSchoolDataList" resultType="com.lhf.dajiuye.own.domain.School">
        select * from school
        <where>
            <if test="schId!=0">
                and schId=1
            </if>
        </where>
    </select>
    <select id="getProvinceDataList" resultType="com.lhf.dajiuye.own.domain.Province">
        select * from area_province
    </select>
    <select id="getCityDataList" resultType="com.lhf.dajiuye.own.domain.City">
        select * from area_city
    </select>
    <select id="getDistrictDataList" resultType="com.lhf.dajiuye.own.domain.District">
        select * from area_district
    </select>
    <select id="getLargeCatDataList" resultType="com.lhf.dajiuye.own.domain.LCategory">
        select * from lcategory
    </select>
    <select id="getMiddleCatDataList" resultType="com.lhf.dajiuye.own.domain.MCategory">
        select * from mcategory
    </select>
    <select id="getSmallCatDataList" resultType="com.lhf.dajiuye.own.domain.SCategory">
        select * from scategory
    </select>
</mapper>